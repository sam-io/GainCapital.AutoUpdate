<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" DefaultTargets="RunTests" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

	<PropertyGroup>
		<NUnitCommand>$(MSBuildProjectDirectory)\tools\NUnit.ConsoleRunner\tools\nunit3-console.exe</NUnitCommand>
	</PropertyGroup>

	<Target Name="RunTests">
		<Message Text="*** NUnit tests beginning..." />
		<Exec Command="$(NUnitCommand) $(MSBuildProjectDirectory)\bin\GainCapital.AutoUpdate.Tests.dll -result=bin\TestResults.xml -out=bin\TestOutput.log"/>
	</Target>

</Project>
